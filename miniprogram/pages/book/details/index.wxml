<!--pages/book/details/index.wxml-->
<ui-sys title="{{book.title}}">
  <ui-fixed bg="bg-mask-20" sticky>
    <van-search model:value="{{ keyword }}" placeholder="请输入搜索关键词" use-action-slot bind:search="onSearch" shape="round">
      <view slot="action" bind:tap="onAddGift" style="display: flex;">
        <van-icon class="px-3" name="add" color="#F76664" size="56rpx" />
      </view>
    </van-search>
  </ui-fixed>
  <view class="ui-container">
    <van-empty wx:if="{{giftList.length==0}}" description="还没有记录哦~"></van-empty>
    <view class='gift-card' wx:for="{{giftList}}" wx:key="index" bindtap="onGiftClick" data-gift='{{item}}'>
      <view class='content'>
        <view class='title'>{{item.friendInfo.name}}</view>
      </view>
      <view class='label'>
        {{item.money}}元
      </view>
    </view>
  </view>
</ui-sys>