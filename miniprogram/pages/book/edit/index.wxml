<!--pages/book/edit/index.wxml-->
<ui-sys title="添加礼簿" footer="{{false}}">
	<van-cell-group inset custom-class="my-3">
		<van-field readonly size="large" label="时间" left-icon="calendar-o" value="{{ date.value }}" bind:click-input="showCalendar" use-button-slot placeholder="请选择日期">
			<van-icon name="arrow" slot="button" />
		</van-field>
		<van-field label="礼簿名称" size="large" left-icon="balance-list-o" model:value="{{ title }}" placeholder="请输入名称" maxlength="16" />
		<van-field label="备注" size="large" left-icon="bookmark-o" model:value="{{ remarks }}" type="textarea" placeholder="选填" autosize="{{ { minHeight: 120} }}" maxlength="32" />
	</van-cell-group>

	<text class="text-xs text-grey mx-4">Tips:一场宴席活动中，用来登记所有来客贺礼的名册，称为礼簿。</text>
	<view class="submit-bar">
		<van-row gutter="24">
			<van-col span="8" wx:if="{{_id}}">
				<van-button color="#F76664" block round plain bind:click="onDelete">删除</van-button>
			</van-col>
			<van-col span="{{_id?16:24}}">
				<van-button color="#F76664" block round disabled="{{!title|!date.value}}" bind:click="onSave">
					保 存
				</van-button>
			</van-col>
		</van-row>
	</view>
</ui-sys>