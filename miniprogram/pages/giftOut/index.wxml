<!--pages/giftOut/index.wxml-->
<ui-sys img="/static/img/4put2.png" footer="{{false}}" tabbar>
  <ui-navbar back="{{false}}" isSlot opacity scrollTop="{{scrollTop}}">
    <view class="px-3 pb-2 flex-bar">
      <view class="round _icon-add-round-o ui-TC-Main" style="font-size: 56rpx;" bindtap="onAdd" />
      <van-search background="ui-BG-1" model:value="{{ keyword }}" placeholder="请输入搜索关键词" bind:search="onSearch" shape="round" wx:if="{{scrollTop > sys_navBar}}" />
    </view>
  </ui-navbar>

  <van-search background="ui-BG-1" model:value="{{ keyword }}" placeholder="请输入搜索关键词" bind:search="onSearch" shape="round" />

  <view class="ui-container">
    <van-empty wx:if="{{giftList.length===0}}" description="还没有记录哦~"></van-empty>
    <view class='gift-card' wx:for="{{giftList}}" wx:key="index" bindtap="onGiftClick" data-gift='{{item}}'>
      <view class='content'>
        <view class='title'>{{item.friendInfo.name}}</view>
        <view class='info'>{{item.title}}</view>
        <view class='info'>{{item.date.value}}</view>
      </view>
      <view class='label'>{{item.money}}元</view>
    </view>
  </view>
</ui-sys>
<!-- 人情编辑组件 -->
<gift-out-edit id="gift-out-edit" bind:dialogResult="giftEditDialog"></gift-out-edit>