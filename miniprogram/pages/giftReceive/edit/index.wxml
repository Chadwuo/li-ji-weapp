<!--pages/giftReceive/edit/index.wxml-->
<ui-sys title="{{_id?'编辑收礼':'添加收礼'}}" footer="{{false}}" class="container">
	<view class="ui-container">
		<ui-form ui="ui-BG my-3 shadow radius">
			<ui-form-group title="来宾姓名" isAction icon="cicon-avatar">
				<ui-input-box>
					<input class="ui-input-wrapper" placeholder="点击右侧图标选择" model:value="{{ friendName }}" />
					<block slot="action"><text class="cicon-accounts icon-xl px-3" bindtap="showFriendSelect" /></block>
				</ui-input-box>
			</ui-form-group>
			<ui-form-group title="礼金" icon="cicon-moneybag">
				<ui-input-box>
					<input class="ui-input-wrapper" placeholder="收礼金额" type="digit" model:value="{{ money }}" />
				</ui-input-box>
			</ui-form-group>
			<ui-form-group title="备注" icon="cicon-bookmark">
				<ui-input-box>
					<input class="ui-input-wrapper" placeholder="选填" model:value="{{ remarks }}" />
				</ui-input-box>
			</ui-form-group>
		</ui-form>
		<text class="text-xs text-grey">Tips:你可以点击联系人图标快速选取来宾。</text>
	</view>
	<view class="submit-bar">
		<van-row gutter="24">
			<van-col span="8" wx:if="{{_id}}">
				<van-button color="#F76664" block round plain bind:click="onDelete">删除</van-button>
			</van-col>
			<van-col span="{{_id?16:24}}">
				<van-button color="#F76664" block round disabled="{{!friendName|!money}}" bind:click="onSave">
					保 存
				</van-button>
			</van-col>
		</van-row>
	</view>
</ui-sys>