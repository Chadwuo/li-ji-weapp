.user .header {
  padding: 0 30rpx;
  height: 190rpx;
  position: relative;
}

.user .header:after {
  position: absolute;
  left: 0;
  right: 0;
  bottom: -98rpx;
  z-index: -1;
  content: '';
  height: 100rpx;
  width: 100%;
  border-radius: 0 0 50% 50%;
  background-color: #F76664;
}

.user .header .picTxt .pictrue {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user .header .picTxt .pictrue .avatar {
  overflow: hidden;
  display: block;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 2px solid #f5f5f5;
}

.user .header .picTxt .text {
  width: 434rpx;
  color: rgba(255, 255, 255, 1);
  margin-left: 35rpx;
}

.user .header .picTxt .text .name {
  color: #fff;
  font-size: 36rpx;
  max-width: 470rpx;
}

.user .header .picTxt .text .desc {
  color: rgba(255, 255, 255, 0.6);
  font-size: 26rpx;
  margin-top: 15rpx;
}

.user .header .icon-shezhi {
  font-size: 38rpx;
  color: #fff;
  margin-top: 15rpx;
  margin-right: 30rpx;
}

.user .wrapper {
  padding: 0 20rpx;
}

.user .wrapper .nav {
  background-color: #fff;
  border-radius: 20rpx;
  height: 140rpx;
}

.user .wrapper .nav .item {
  flex: 1;
  text-align: center;
}

.user .wrapper .nav .item~.item {
  border-left: 1px solid #eee;
}

.user .wrapper .nav .item .title {
  margin-top: 16rpx;
  font-size: 22rpx;
  color: #666;
}

.user .wrapper .nav .item .num {
  margin-top: 16rpx;
  font-size: 36rpx;
}

.user .wrapper .myService {
  background-color: #fff;
  margin-top: 24rpx;
  border-radius: 10rpx;
}

.user .wrapper .myService .title {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.user .wrapper .myService .serviceList {
  padding: 8rpx 0 27rpx 0;
}

.user .wrapper .myService .serviceList .item {
  width: 25%;
  text-align: center;
  font-size: 26rpx;
  color: #333;
  margin-top: 36rpx;
}

.user .wrapper .myService .serviceList .item .pictrue {
  width: 64rpx;
  height: 64rpx;
  margin: 0 auto 16rpx auto;
}

.user .wrapper .myService .serviceList .item .title {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #888888;
}