<view>
  <van-search model:value="{{ keyword }}" placeholder="请输入搜索关键词" use-action-slot bind:search="onSearch" shape="round">
    <view slot="action" bind:tap="onAddGift" style="display: flex;">
      <van-icon name="add" color="#F76664" size="52rpx" />
    </view>
  </van-search>
  <view class="wrapper">
    <van-empty wx:if="{{giftList.length===0}}" description="还没有记录哦~"></van-empty>
    <view class='gift-card' wx:for="{{giftList}}" wx:key="index" bindtap="onGiftClick" data-giftid='{{item._id}}'>
      <view class='content'>
        <view class='title'>{{item.friendInfo.name}}</view>
        <view class='info'>{{item.name}}</view>
        <view class='info'>{{item.date}}</view>
      </view>
      <view class='label'>{{item.money}}元</view>
    </view>
  </view>
</view>
<!-- 人情编辑组件 -->
<gift-out-edit id="gift-out-edit"></gift-out-edit>
<!-- 页脚 -->
<footer></footer>